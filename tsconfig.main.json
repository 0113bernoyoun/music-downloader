{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "noEmit": false,
    "declaration": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@main/*": ["src/main/*"]
    }
  },
  "include": [
    "src/main/**/*"
  ],
  "exclude": [
    "src/renderer",
    "node_modules",
    "dist",
    "release"
  ]
}